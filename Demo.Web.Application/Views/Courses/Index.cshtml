@model IEnumerable<Course>

@{ ViewBag.Title = "Courses"; }

@section Head {
    <style>
        table a
        {
            text-decoration: none;
        }
    </style>
}


<p>
    @Html.ActionLink("Create...", "Course")
</p>


<table>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(courses => courses.First().Name)</th>
            <th/>
        </tr>
    </thead>
    <tbody>
        @foreach(var course in Model) {
            <tr>
                <td>
                    @Html.ActionLink(course.Name, "Course", new { courseName = course.Name })
                </td>
                <td>
                    <em>@((DateTimeOffset.Now - course.Created).TotalDays < 7 ? "new" : "")</em>
                </td>
            </tr>
        }
        @if (Model.Count() == 0) {
            <tr>
                <td colspan="2">(No courses)</td>
            </tr>
        }
    </tbody>
</table>

